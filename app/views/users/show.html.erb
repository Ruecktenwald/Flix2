<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
  </header>

  <footer>
  	<nav>
  		<%= link_to "Edit Account", edit_user_path(@user), class: 'button' %>
  		<%= link_to "Delete Account", @user, 
  			method: :delete,
  			data: {comfirm: "Are you sure youwant to permanently delet your account?"}, 
  			class: 'button' %>
  	</nav>
  </footer>
</article>